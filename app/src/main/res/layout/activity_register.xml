<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp"
        android:text="Registration Page"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"/>

    <EditText
        android:id="@+id/first_name_field"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="200dp"
        android:hint="First Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/family_name_field"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_below="@id/first_name_field"
        android:hint="Family Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/dob_field"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_below="@id/family_name_field"
        android:hint="Date of Birth"
        android:inputType="date"/>

    <EditText
        android:id="@+id/email_field"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_below="@id/dob_field"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/pswd_field"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_below="@id/email_field"
        android:hint="Password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/reg_confirmation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:layout_below="@id/pswd_field"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/purple_500"/>

</RelativeLayout>